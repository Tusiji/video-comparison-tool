{
  "manifest_version": 3,
  "name": "Video Comparison Tool",
  "version": "1.0",
  "description": "An application to upload and compare multiple videos side-by-side with synchronized playback controls.",
  "action": {
    "default_title": "Open Video Comparison Tool"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdn.tailwindcss.com https://esm.sh; object-src 'self'"
  }
}
